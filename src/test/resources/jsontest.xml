<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <LogstashJsonLayout>
                <Providers>
                    <LoggerName/>
                    <LogLevel/>
                    <Message/>
                    <StackTrace/>
                    <ThreadName/>
                    <Timestamp>
                        <Pattern>[UNIX_TIMESTAMP_AS_NUMBER]</Pattern>
                    </Timestamp>
                    <LogstashMarkers/>
                </Providers>
            </LogstashJsonLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
